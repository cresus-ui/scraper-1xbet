{
  "title": "1xBet Scraper Input",
  "description": "Configuration pour l'extraction de données sportives depuis 1xbet.com",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "sports": {
      "title": "Sports à extraire",
      "type": "array",
      "description": "Liste des sports à scraper",
      "default": ["football"],
      "items": {
        "type": "string",
        "enum": [
          "football",
          "basketball",
          "tennis",
          "volleyball",
          "hockey",
          "baseball",
          "handball",
          "rugby",
          "cricket",
          "boxing",
          "mma",
          "esports"
        ]
      },
      "editor": "select",
      "uniqueItems": true
    },
    "extraction_type": {
      "title": "Type d'extraction",
      "type": "string",
      "description": "Type de données à extraire",
      "default": "both",
      "enum": [
        "prematch",
        "postmatch",
        "both"
      ],
      "enumTitles": [
        "Pré-match uniquement",
        "Post-match uniquement",
        "Les deux"
      ],
      "editor": "select"
    },
    "max_matches_per_sport": {
      "title": "Limite de matchs par sport",
      "type": "integer",
      "description": "Nombre maximum de matchs à extraire par sport",
      "default": 100,
      "minimum": 1,
      "maximum": 1000
    },
    "include_odds": {
      "title": "Inclure les cotes",
      "type": "boolean",
      "description": "Extraire les cotes de paris",
      "default": true
    },
    "include_statistics": {
      "title": "Inclure les statistiques",
      "type": "boolean",
      "description": "Extraire les statistiques détaillées des matchs",
      "default": true
    },
    "include_lineups": {
      "title": "Inclure les compositions",
      "type": "boolean",
      "description": "Extraire les compositions d'équipes",
      "default": false
    },
    "include_weather": {
      "title": "Inclure la météo",
      "type": "boolean",
      "description": "Extraire les conditions météorologiques",
      "default": false
    },
    "date_range": {
      "title": "Plage de dates",
      "type": "object",
      "description": "Période pour l'extraction des matchs",
      "properties": {
        "start_date": {
          "title": "Date de début",
          "type": "string",
          "format": "date",
          "description": "Date de début au format YYYY-MM-DD"
        },
        "end_date": {
          "title": "Date de fin",
          "type": "string",
          "format": "date",
          "description": "Date de fin au format YYYY-MM-DD"
        }
      }
    },
    "output_format": {
      "title": "Format de sortie",
      "type": "string",
      "description": "Format des données exportées",
      "default": "json",
      "enum": [
        "json",
        "csv",
        "xlsx"
      ],
      "enumTitles": [
        "JSON",
        "CSV",
        "Excel"
      ],
      "editor": "select"
    },
    "parallel_requests": {
      "title": "Requêtes parallèles",
      "type": "integer",
      "description": "Nombre de requêtes simultanées",
      "default": 3,
      "minimum": 1,
      "maximum": 10
    },
    "request_delay": {
      "title": "Délai entre requêtes",
      "type": "number",
      "description": "Délai en secondes entre les requêtes",
      "default": 2,
      "minimum": 0.5,
      "maximum": 10
    },
    "max_retries": {
      "title": "Tentatives maximum",
      "type": "integer",
      "description": "Nombre maximum de tentatives en cas d'échec",
      "default": 3,
      "minimum": 1,
      "maximum": 10
    },
    "timeout": {
      "title": "Timeout des requêtes",
      "type": "integer",
      "description": "Timeout en secondes pour les requêtes HTTP",
      "default": 30,
      "minimum": 10,
      "maximum": 120
    },
    "monitoring": {
      "title": "Configuration du monitoring",
      "type": "object",
      "description": "Paramètres de surveillance et d'alertes",
      "properties": {
        "enable_alerts": {
          "title": "Activer les alertes",
          "type": "boolean",
          "description": "Envoyer des alertes en cas de problème",
          "default": true
        },
        "health_check_interval": {
          "title": "Intervalle de vérification",
          "type": "integer",
          "description": "Intervalle en secondes pour les vérifications de santé",
          "default": 300,
          "minimum": 60,
          "maximum": 3600
        },
        "max_error_rate": {
          "title": "Taux d'erreur maximum",
          "type": "number",
          "description": "Taux d'erreur maximum toléré (0.0 à 1.0)",
          "default": 0.1,
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "proxy_configuration": {
      "title": "Configuration proxy",
      "type": "object",
      "description": "Configuration des proxies pour éviter les blocages",
      "properties": {
        "useApifyProxy": {
          "title": "Utiliser Apify Proxy",
          "type": "boolean",
          "description": "Utiliser le service proxy d'Apify",
          "default": true
        },
        "apifyProxyGroups": {
          "title": "Groupes de proxy",
          "type": "array",
          "description": "Groupes de proxy Apify à utiliser",
          "items": {
            "type": "string"
          },
          "default": ["RESIDENTIAL"]
        }
      }
    },
    "debug_mode": {
      "title": "Mode debug",
      "type": "boolean",
      "description": "Activer les logs détaillés pour le débogage",
      "default": false
    },
    "save_screenshots": {
      "title": "Sauvegarder les captures",
      "type": "boolean",
      "description": "Sauvegarder des captures d'écran en cas d'erreur",
      "default": false
    }
  },
  "required": [
    "sports",
    "extraction_type"
  ]
}